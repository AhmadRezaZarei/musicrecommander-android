<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.onboarding.GenderActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Select your gender"
        android:textColor="@color/md_blue_A400"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_male"
        style="@style/CustomChipChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:checkable="true"
        android:focusable="true"
        android:text="Male 🧍"
        app:chipMinHeight="40dp"
        android:textSize="20dp"
        android:minHeight="50dp"
        app:chipCornerRadius="40dp"
        app:chipStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:textEndPadding="20dp"
        app:textStartPadding="20dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_female"
        style="@style/CustomChipChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:checkable="true"
        android:focusable="true"
        android:text="Female 🧍‍♀️"
        app:chipMinHeight="40dp"
        android:textSize="20dp"
        android:minHeight="50dp"
        app:chipCornerRadius="40dp"
        app:chipStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/chip_male"
        app:textEndPadding="20dp"
        app:textStartPadding="20dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_rather_not_say"
        style="@style/CustomChipChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:checkable="true"
        android:focusable="true"
        android:text="Rather not say"
        app:chipMinHeight="40dp"
        android:textSize="20dp"
        android:minHeight="50dp"
        app:chipCornerRadius="40dp"
        app:chipStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/chip_female"
        app:textEndPadding="20dp"
        app:textStartPadding="20dp" />


    <com.google.android.material.button.MaterialButton
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Next"
        android:textColor="#fff"
        android:textSize="18dp"
        app:backgroundTint="@color/md_blue_A400"
        app:cornerRadius="40dp"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

    </com.google.android.material.button.MaterialButton>



</androidx.constraintlayout.widget.ConstraintLayout>